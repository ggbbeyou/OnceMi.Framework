{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "AppId": 1,
    "DeveloperRoleName": "Developer", //系统管理员角色名称
    "Host": "",
    //系统加密密钥，AESSecretKey为密钥，AESVector为加密向量
    //不管是密钥还是加密向量，都至少需要16位
    "AESSecretKey": "6k3W!TFjBA8bh4dC",
    "AESVector": "99p3Db^FALkrKSBm",
    "HealthCheck": {
      "HealthCheckName": "HTTP API",
      "HealthCheckEndpoint": "/sys/health",
      "HealthCheckUIPath": "/sys/health-ui",
      "EvaluationTimeinSeconds": 120,
      "MaximumHistoryEntriesPerEndpoint": 50
    },
    //是否写请求日志
    "IsEnableRequestLog": false,
    //是否初始化数据库
    "IsInitializeDb": true
  },
  //支持分库分表，单个数据库情况下，填写默认的一个即可
  //多个数据库，默认使用Name为default的数据库，或列表按照name升序排序后的第一个数据库，可以通过代码手动切换
  //分库情况下，对于跨库事务和查询需要特别注意！！！
  //DbType枚举：MySql/SqlServer/PostgreSQL/Oracle/Sqlite
  //如果使用Mysql，且需要自动创建数据库，一定要授权Create的服务器权限
  "DbConnectionStrings": [
    {
      "Name": "default",
      "DbType": "Sqlite",
      "ConnectionString": "Data Source=/oncemi/data/app.db; Pooling=true;Min Pool Size=5"
    }
    //{
    //  "Name": "default",
    //  "DbType": "PostgreSQL",
    //  "ConnectionString": "Host=proxy-shanghai-1.geeiot.net;Port=5432;Database=devdb;Username=developer;Password=97Y2zAyvAo2epT4NgV;Pooling=true;Minimum Pool Size=5"
    //},
    //{
    //  "Name": "db1",
    //  "DbType": "MySql",
    //  "ConnectionString": "Data Source=proxy-shanghai-1.geeiot.net;Port=3306;Initial Catalog=devdb;User ID=developer;Password=97Y2zAyvAo2epT4NgV;Charset=utf8mb4; SslMode=none;Min pool size=5"
    //}
  ],
  "MessageQueneSetting": {
    "ProviderType": "Redis", //RabbitMQ,Redis
    "ConnectionString": "Host=berrypi.net;Port=5672;UserName=root;Password=123456"
    //"ConnectionString": "127.0.0.1:6379,password=,ConnectTimeout=3000,defaultdatabase=0"
  },
  "RedisSetting": {
    "RedisSchema": "Default", //Default/MasterSlave/Sentinel/Cluster，Default为单一redis数据库时使用，当然也可以选择位其它的
    "SentinelConnectionString": "", //Sentinel模式必填
    "RedisConnectionStrings": [
      "127.0.0.1:6379,password=,ConnectTimeout=3000,defaultdatabase=0"
    ]
  },
  "IdentityServer": {
    "UseIdentityServer": true,
    //"Url": "https://account.geeiot.net/",
    "Url": "https://localhost:50010/",
    "Audience": "api1",
    "RequireHttps": false
  },
  "FileUpload": {
    //是否将文件上传至OSS，OSS配置信息在OnceMi.Framework.Config项目下的appsettings.Base.json中
    "IsUploadToOSS": false,
    //储存桶名称，启用上传至oss时有效
    "BucketName": "framework-dev",
    //文件上传路径，支持相对路径和绝对路径，相对路径为相对程序更目录
    "FileUploadPath": "/oncemi/upload"
  },
  "TokenManagement": {
    "Audience": "OnceMi.Framework.Api"
  }
}
